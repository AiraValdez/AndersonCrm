
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <form method="post" action="~/Department/Details">
        <br />
        <input type="hidden" class="form-control" name="Department.DepartmentId" value="@Model.DepartmentId " disabled />
        <label for="Description">Department Name:</label>
        <input type="text" class="form-control" name="Department.Description" value="@Model.Description " disabled />
        <br />

        <a href="/Department/Edit/@Model.DepartmentId" class="btn btn-primary" style="margin-right:10px;" float="left"><i class="glyphicon glyphicon-edit"></i> Edit</a>
        <a href="/Department/Index" class="btn btn-danger"><i class="glyphicon glyphicon-close "></i>Close</a>
    </form>
</div>